{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "rootDir": "./src",
        "outDir": "./dist",
        "typeRoots": ["@types/", "node_modules/@types"],
        "baseUrl": "src",
        "paths": {
            "@data": ["data/"],
            "@data/*": ["data/*"],
            "@context": ["context/"],
            "@context/*": ["context/*"],
            "@view": ["view/"],
            "@view/*": ["view/*"],
            "@icons/*": ["icon/*"]
        }
    }
}
